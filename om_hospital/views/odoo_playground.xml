<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- odoo.playground form view -->
    <record id="odoo_playground_view_form" model="ir.ui.view">
        <field name="name">odoo.playground.view.form</field>
        <field name="model">odoo.playground</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                    <field name="model_id"/>
                    <field name="code" widget="ace" options="{'mode':'python'}"/>    
                    </group>
                    <group>
                        <button string="Execute" name="action_execute" type="object" class="oe_highlight" data-hotkey="q"/>
                    </group>
                    <group>
                    <field name="result"/>    
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- odoo.playground action window -->
    <record id="odoo_playground_action" model="ir.actions.act_window">
        <field name="name">Play Ground</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odoo.playground</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="technical_menu_root" name="Teknikal" sequence="110">
        <menuitem id="playround1_menu_categ" name="Play Ground 1" sequence="10">
            <menuitem id="playground_menu_act" name="Play Ground" action="odoo_playground_action" sequence="110"/> 
        </menuitem>
    </menuitem>
</odoo>